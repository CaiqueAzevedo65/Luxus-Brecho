# Flask
FLASK_DEBUG=False

# CORS - origens permitidas do frontend (se não definido, usa localhost:5173)
# Pode receber múltiplas origens separadas por vírgulas
# FRONTEND_ORIGIN=http://localhost:5173,http://127.0.0.1:5173
# Em produção, defina o domínio do frontend
# FRONTEND_ORIGIN=https://www.seu-dominio.com

# Nome do banco de dados a ser utilizado pela aplicação
MONGODB_DATABASE=luxus_brecho_db

# Forma preferencial: URI completa de conexão (recomendado em produção)
# Exemplo para Atlas (SRV):
# MONGODB_URI=mongodb+srv://<USERNAME>:<PASSWORD>@<HOST>/?retryWrites=true&w=majority&appName=Cluster0
# Exemplo para instância local/URI padrão:
# MONGODB_URI=mongodb://localhost:27017

# Forma alternativa: definir os 3 campos abaixo (apenas se NÃO usar MONGODB_URI)
# Todos devem estar preenchidos para que a URI seja montada corretamente
# MONGODB_USERNAME=
# MONGODB_PASSWORD=
# MONGODB_HOST=localhost:27017
