{
  "info": {
    "name": "Luxus Brechó API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Coleção Postman para testar a API do Luxus Brechó."
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /api/health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status code is 200 or 503\", function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 503]);",
                  "});",
                  "",
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) { json = {}; }",
                  "",
                  "pm.test(\"Has api_status\", function () {",
                  "  pm.expect(json).to.have.property('api_status');",
                  "});",
                  "pm.test(\"Has database_status\", function () {",
                  "  pm.expect(json).to.have.property('database_status');",
                  "});",
                  "pm.test(\"api_status is UP\", function () {",
                  "  pm.expect(json.api_status).to.eql('UP');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
